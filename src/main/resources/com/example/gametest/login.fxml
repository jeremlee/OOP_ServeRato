<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gametest.LoginController">
   <children>
      <ImageView fitHeight="805.0" fitWidth="1204.0" layoutX="-2.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@login_pic.png" />
         </image>
      </ImageView>
      <VBox alignment="TOP_CENTER" layoutX="476.0" layoutY="365.0" prefHeight="258.0" prefWidth="249.0" spacing="20.0">
         <effect>
            <DropShadow />
         </effect>
         <children>
            <Label text="Username">
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtfUsername">
               <font>
                  <Font name="Montserrat Regular" size="12.0" />
               </font>
            </TextField>
            <Label text="Password">
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </Label>
            <PasswordField fx:id="txtfPassword" onKeyPressed="#onLoginEnter" />
            <ImageView fx:id="imgLogin" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onLoginClick" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@login_button.png" />
               </image></ImageView>
            <ImageView fx:id="imgRegister" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#toRegister" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@signup.png" />
               </image>
            </ImageView>
            <Label fx:id="lblErrorMsg" textFill="WHITE">
               <font>
                  <Font name="Montserrat Regular" size="18.0" />
               </font></Label>
         </children></VBox>

   </children>
</AnchorPane>
